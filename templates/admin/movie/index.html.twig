{% extends "base.html.twig" %}

{% block title 'Gérer la liste des films' %}

{% block body %}
<div class="container">
    <header class="blog-header py-3">
        <div class="row flex-nowrap justify-content-between align-items-center">
            <div class="col-4 pt-1">
                <a class="btn btn-sm btn-outline-success" href="#">Se connecter</a>
            </div>
            <div class="col-4 text-center">
                <a class="blog-header-logo text-dark" href="{{ path('home')}}">Cinéma gOne</a>
            </div>
            <div class="col-4 d-flex justify-content-end align-items-center">
                <a class="text-dark" href="#" aria-label="Search">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="mx-3" role="img" viewBox="0 0 24 24" focusable="false"><title>Search</title><circle cx="10.5" cy="10.5" r="7.5"/><path d="M21 21l-5.2-5.2"/></svg>
                </a>
            </div>
        </div>
    </header>
{# endHeader #}
    <div class="nav-scroller py-1 mb-2">
        <nav class="nav d-flex justify-content-center" style="font-size: 1.5em; margin:0;">
            <a class="p-2 text-dark" href="{{ path('movie.index')}}">Films</a>
            <a class="p-2 text-dark" href="#">Acteurs</a>
            <a class="p-2 text-dark" href="#">Genres</a>
        </nav>
    </div>
{#endNav#}
    <div class="jumbotron p-4 p-md-5 text-white rounded bg-dark">
        <div class="col-md-6 px-0">
            <h1 class="display-4 font-italic">Gérer la liste des films</h1>
        </div>
    </div>
{#endJumbotron#}
</div>
<div class="container">

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Titre</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for movie in movies %}
            <tr>
                <td>{{movie.titre}}</td>
                <td>
                    <a href="{{ path('admin.movie.edit', {id: movie.id}) }}" class="btn btn-secondary">Éditer</a>
                    <form method="POST" action="{{ path('admin.movie.delete', {id: movie.id}) }}" style="display: inline-block;" onsubmit="return confirm('Êtes vous vraiment sûr ?')">
                        <input type="hidden" name="_method" value="DELETE">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ movie.id) }}">
                        <button class="btn btn-danger">Supprimer <i class="fa fa-trash"></i></button>
                    </form>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

    <div class="text-right">
        <a href="{{ path('admin.movie.new')}}" class="btn btn-success">Créer un nouveau film</a>
    </div>
</div>
{% endblock body %}
