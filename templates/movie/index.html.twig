{% extends "base.html.twig" %}

{% block title 'Tous les films' %}

{% block body %}
<div class="container">
    <header class="blog-header py-3">
        <div class="row flex-nowrap justify-content-between align-items-center">
            <div class="col-4 pt-1">
                {% if app.user %}
                    <a href="{{path('logout')}}" class="btn btn-sm btn-danger">Se déconnecter</a>
                {% endif %}
                {% if not app.user %}
                    <a class="btn btn-sm btn-outline-success" href="{{path('login')}}">Se connecter</a>
                {% endif %}
            </div>
            <div class="col-4 text-center">
                <a class="blog-header-logo text-dark" href="{{ path('home')}}">Cinéma gOne</a>
            </div>
            <div class="col-4 d-flex justify-content-end align-items-center">
                <a href="#" class="btn btn-success">S'inscrire</a>
            </div>
        </div>
    </header>
{# endHeader #}
    <div class="nav-scroller py-1 mb-2">
        <nav class="nav d-flex justify-content-center" style="font-size: 1.5em; margin:0;">
            <a class="p-2 text-dark" href="{{ path('movie.index')}}">Films</a>
            <a class="p-2 text-dark" href="{{path('actor.index')}}">Acteurs</a>
            <a class="p-2 text-dark" href="#">Genres</a>
        </nav>
    </div>
{#endNav#}
    <div class="jumbotron p-4 p-md-5 text-white rounded bg-dark">
        <div class="col-md-6 px-0">
            <h1 class="display-4 font-italic">Tous les films</h1>
        </div>
        <div class="container mt-4">
            {{form_start(form) }}
            <div class="form-row align-items-end">
                <div class="col-md-4">
                    <div class="form-group" style="height: 38px;">
                        {{ form_row(form.rechercherNom)}}
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        {{form_row(form.actors)}}
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <button class="btn btn-secondary">Rechercher <i class="fa fa-search"></i></button>
                    </div>
                </div>
            </div>
            {{form_end(form) }}
        </div>
    </div>
{#endJumbotron#}
</div>
<div class="container">
    <div class="row">
        {% for movie in movies %}
            {% include "movie/_movie.html.twig" %}
        {% endfor %}
    </div>
    <div class="pagination">
        {{ knp_pagination_render(movies) }}
    </div>
</div>
{% endblock %}