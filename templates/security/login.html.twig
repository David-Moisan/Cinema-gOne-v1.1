{% extends "base.html.twig" %}

{% block title 'Se connecter' %}

{% block body %}
<div class="container">
    <header class="blog-header py-3">
        <div class="row flex-nowrap justify-content-between align-items-center">
            <div class="col-4 pt-1">
                {% if app.user %}
                    <a href="{{path('logout')}}" class="btn btn-sm btn-danger">Se déconnecter</a>
                {% endif %}
                {% if not app.user %}
                    <a class="btn btn-sm btn-outline-success" href="{{path('login')}}">Se connecter</a>
                {% endif %}
            </div>
            <div class="col-4 text-center">
                <a class="blog-header-logo text-dark" href="{{ path('home')}}">Cinéma gOne</a>
            </div>
            <div class="col-4 d-flex justify-content-end align-items-center">
                <a href="#" class="btn btn-success">S'inscrire</a>
            </div>
        </div>
    </header>
{# endHeader #}
    <div class="nav-scroller py-1 mb-2">
        <nav class="nav d-flex justify-content-center" style="font-size: 1.5em; margin:0;">
            <a class="p-2 text-dark" href="{{ path('movie.index')}}">Films</a>
            <a class="p-2 text-dark" href="#">Acteurs</a>
            <a class="p-2 text-dark" href="#">Genres</a>
        </nav>
    </div>
    <hr>
{#endNav#}
</div>
<div class="container" style="background-color: #343A40; padding: 1.5rem; color: white; border-radius: 10px;">

    <h1 class="mb-2">Se connecter</h1>

    {% if error %}
        <div class="alert alert-danger">
            {{ error.messageKey | trans(error.messagedata, 'security') }}
        </div>
    {% endif %}


    <form action="{{ path('login')}}" method="POST">
        <div class="form-group">
            <label for="username">Nom d'utilisateur :</label>
            <input type="text" id="username" name="_username" class="form-control" value="{{ last_username }}">
            <label for="password">Mot de passe :</label>
            <input type="password" id="password" name="_password" class="form-control">
        </div>

        <button class="btn btn-primary" type="submit">Se connecter</button>
    </form>
</div>
{% endblock %}